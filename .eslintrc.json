{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals",
    "next/typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:prettier/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "plugins": ["@typescript-eslint", "prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "singleQuote": false,        // Usar comillas dobles
        "tabWidth": 2,               // Usar doble espacio para indentación
        "bracketSpacing": true,      // Mantener espacio entre llaves e.g { import }
        "printWidth": 80,            // Ajuste de línea a 80 caracteres
        "semi": true                 // Incluir punto y coma al final
      }
    ],
    "@typescript-eslint/explicit-module-boundary-types": "off"
  }
}